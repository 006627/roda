<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:m="urn:import:pt.gov.dgarq.roda.wui.main.client"
	xmlns:common="urn:import:pt.gov.dgarq.roda.wui.common.client.widgets">

	<ui:style>
	.browse {
		display: flex;
		justify-content: space-between;
		min-height: 600px;
	}
	
	.content {
		padding: 40px;
		width: 100%;
	}
	
	.item_icon {
		
	}
	
	.sidebar {
		background-color: #eee;
		padding: 40px;
		width: 200px;
	}
	
	.searchlist {
		
	}
	
	.sidebar-title {
		margin-bottom: 10px;
	}
	
	.action {
		
	}
	
	.footer {
		clear: both;
	}
	</ui:style>

	<g:FlowPanel styleName="browse" addStyleNames="{style.browse}">
		<g:FlowPanel styleName="{style.content}">
			<g:Label styleName="h1">
				<ui:msg description="Browser title">Browse</ui:msg>
			</g:Label>
			<g:SimplePanel addStyleNames="{style.item_icon}"
				ui:field="itemIcon" />
			<g:Label styleName="h2" ui:field="itemTitle">
				<ui:msg description="Item title">All collections</ui:msg>
			</g:Label>
			<common:CollectionsTable ui:field="fondsPanel"
				addStyleNames="{style.searchlist}" />
		</g:FlowPanel>
		<g:FlowPanel styleName="{style.sidebar}">
			<g:Label addStyleNames="h2 {style.sidebar-title}">
				<ui:msg description="Browser actions">Actions</ui:msg>
			</g:Label>
			<g:Button addStyleNames="{style.action} btn btn-plus"
				ui:field="createFonds">
				<ui:msg description="Create new item">New item</ui:msg>
			</g:Button>
		</g:FlowPanel>
		<g:FlowPanel styleName="{style.footer}" />
	</g:FlowPanel>
</ui:UiBinder>