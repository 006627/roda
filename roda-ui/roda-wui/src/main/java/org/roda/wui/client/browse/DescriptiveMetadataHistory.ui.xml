<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:u="urn:import:org.roda.wui.management.user.client">

	<ui:with field='constants' type='config.i18n.client.UserManagementConstants' />
	<ui:with field='messages' type='config.i18n.client.UserManagementMessages' />

	<ui:style>
	
	</ui:style>

	<g:FlowPanel styleName="wui-browse-metadata-descriptive-versions"
		addStyleNames="wrapper skip_padding">
		<g:FlowPanel addStyleNames="row full_width skip_padding">
			<g:FlowPanel addStyleNames="col_10 content">
				<g:Label styleName="h1">Descriptive metadata history</g:Label>
				<g:ListBox ui:field="list" />
				<g:Label styleName="wui-browse-metadata-descriptive-versions-type"
					ui:field="descriptiveMetadataType" />

				<g:FocusPanel ui:field="showXml" styleName="toolbarLink">
					<g:HTML>
						<i class="fa fa-code"></i>
					</g:HTML>
				</g:FocusPanel>
				<g:HTML ui:field="preview" />

			</g:FlowPanel>

			<g:FlowPanel addStyleNames="col_2 last sidebar">
				<g:FlowPanel>
					<g:Label addStyleNames="h4">
						<ui:msg>Actions</ui:msg>
					</g:Label>
					<g:Button addStyleNames="btn btn-play" ui:field="buttonRevert">
						Revert
					</g:Button>
					<g:Button addStyleNames="btn btn-ban" ui:field="buttonRemove">Remove</g:Button>
					<g:Button addStyleNames="btn btn-times-circle" ui:field="buttonCancel">
						Cancel
					</g:Button>

				</g:FlowPanel>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
