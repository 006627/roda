<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:m="urn:import:org.roda.wui.client.main"
	xmlns:commonsearch="urn:import:org.roda.wui.client.common.search"
	xmlns:lists="urn:import:org.roda.wui.client.common.lists" xmlns:browse="urn:import:org.roda.wui.client.browse">
	<ui:with field='messages' type='config.i18n.client.ClientMessages' />

	<ui:style>
	
	</ui:style>

	<g:FlowPanel styleName="wui-browse-representation"
		addStyleNames="wrapper skip_padding">
		<g:FlowPanel addStyleNames="row full_width skip_padding">
			<g:FlowPanel addStyleNames="col_10 content">
				<g:FlowPanel styleName="browseItemPanel">
					<g:Label addStyleNames="browseItemHeader" ui:field="browseItemHeader">
						<ui:text from='{messages.catalogueRepresentationTitle}' />
					</g:Label>
					<g:SimplePanel styleName="browseItemIcon" ui:field="representationIcon" />
					<g:FlowPanel styleName="browseItemPanelText">
						<g:Label styleName="h4" addStyleNames="browseItemText"
							ui:field="representationType" />
					</g:FlowPanel>
					<g:Label addStyleNames="browseRepresentationId" ui:field="representationId"
						title="{messages.representationId}" />
				</g:FlowPanel>
				<m:BreadcrumbPanel ui:field="breadcrumb"
					addStyleNames="browseBreadcrumb" />
				<g:TabPanel ui:field="itemMetadata" addStyleNames="browseItemMetadata" />
				<g:Button addStyleNames="btn btn-plus browseNewDescriptiveMetadataButton"
					ui:field="newDescriptiveMetadata">
					<ui:text from='{messages.newDescriptiveMetadataTitle}' />
				</g:Button>
				<g:Label addStyleNames="h5 browseSearchListTitle" ui:field="filesPanelTitle">
					<ui:text from='{messages.representationFiles}' />
				</g:Label>
				<commonsearch:SearchPanel ui:field="searchPanel" />
				<lists:SearchFileList addStyleNames="searchResults"
					ui:field="filesList" />
			</g:FlowPanel>
			<g:FlowPanel addStyleNames="col_2 last sidebar">
				<g:FlowPanel addStyleNames="sticky-flow">
					<g:FlowPanel addStyleNames="sticky-padding">
						<g:FlowPanel ui:field="actionsSidebar">
							<g:Label addStyleNames="h4">
								<ui:text from='{messages.representation}' />
							</g:Label>
							<g:Button addStyleNames="btn btn-edit"
								ui:field="changeType">
								<ui:text from='{messages.changeTypeButton}' />
							</g:Button>
							<g:Button addStyleNames="btn btn-danger btn-ban"
								ui:field="remove">
								<ui:text from='{messages.removeButton}' />
							</g:Button>
							<g:Button addStyleNames="btn btn-default btn-download"
								ui:field="download">
								<ui:text from='{messages.downloadButton}' />
							</g:Button>
						</g:FlowPanel>
						<g:FlowPanel ui:field="preservationSidebar">
							<g:Label addStyleNames="h4">
								<ui:text from='{messages.preservationTitle}' />
							</g:Label>
							<g:Button addStyleNames="btn btn-play" ui:field="newProcess">
								<ui:text from='{messages.newProcessPreservation}' />
							</g:Button>
							<g:Button addStyleNames="btn btn-play"
								ui:field="identifyFormats">
								<ui:text from='{messages.identifyFormatsButton}' />
							</g:Button>
							<g:Button addStyleNames="btn btn-default btn-clock"
								ui:field="preservationEvents">
								<ui:text from='{messages.preservationEvents}' />
							</g:Button>
							<g:Button addStyleNames="btn btn-default btn-exclamation-triangle"
								ui:field="risks">
								<ui:text from='{messages.preservationRisks}' />
							</g:Button>
						</g:FlowPanel>
						<g:FlowPanel ui:field="filesSidebar">
							<g:Label addStyleNames="h4">
								<ui:text from='{messages.sidebarFoldersFilesTitle}' />
							</g:Label>
							<g:Button addStyleNames="btn btn-edit" ui:field="renameFolders">
								<ui:text from='{messages.renameButton}' />
							</g:Button>
							<g:Button addStyleNames="btn btn-edit" ui:field="moveFiles">
								<ui:text from='{messages.moveButton}' />
							</g:Button>
							<g:Button addStyleNames="btn btn-upload" ui:field="uploadFiles">
								<ui:text from='{messages.uploadFilesButton}' />
							</g:Button>
							<g:Button addStyleNames="btn btn-plus" ui:field="createFolder">
								<ui:text from='{messages.createFolderButton}' />
							</g:Button>
						</g:FlowPanel>
					</g:FlowPanel>
				</g:FlowPanel>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
