<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='messages' type='config.i18n.client.ClientMessages' />

	<ui:style>
	
	</ui:style>

	<g:FlowPanel styleName="wui-browse-metadata-descriptive-versions"
		addStyleNames="wrapper skip_padding">
		<g:FlowPanel addStyleNames="row full_width skip_padding">
			<g:FlowPanel addStyleNames="col_10 content">
				<g:Label styleName="h1">
					<ui:text from='{messages.editDescriptiveMetadataTitle}' />
				</g:Label>
				<g:Label addStyleNames="form-label">
					<ui:text from='{messages.metadataType}' />
				</g:Label>
				<g:ListBox ui:field="type" addStyleNames="form-listbox" />
				<g:Label addStyleNames="form-label">
					<ui:text from='{messages.metadataFilename}' />
				</g:Label>
				<g:TextBox ui:field="id" addStyleNames="form-textbox" />
				<g:Label ui:field="formSimilarDanger" visible="false" addStyleNames="label-danger">
					<ui:text from='{messages.editDescriptionMetadataWarning}' />
				</g:Label>
				<g:Label ui:field="formOrXMLLabel" />
				<g:FocusPanel ui:field="showXml" styleName="toolbarLink">
					<g:HTML>
						<i class="fa fa-code"></i>
					</g:HTML>
				</g:FocusPanel>
				<g:FlowPanel addStyleNames="panel">
					<g:FlowPanel ui:field="formOrXML" addStyleNames="panel-body" />
				</g:FlowPanel>

				<g:HTML visible="false" ui:field="errors" addStyleNames="metadata-edit-errors" />

			</g:FlowPanel>

			<g:FlowPanel addStyleNames="col_2 last sidebar">
				<g:FlowPanel>
					<g:Label addStyleNames="h4">
						<ui:text from='{messages.sidebarActionsTitle}' />
					</g:Label>
					<g:Button addStyleNames="btn btn-play" ui:field="buttonApply">
						<ui:text from='{messages.saveButton}' />
					</g:Button>
					<g:Button addStyleNames="btn btn-danger btn-ban" ui:field="buttonRemove">
						<ui:text from='{messages.removeButton}' />
					</g:Button>
					<g:Button addStyleNames="btn btn-default btn-times-circle" ui:field="buttonCancel">
						<ui:text from='{messages.cancelButton}' />
					</g:Button>

				</g:FlowPanel>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
