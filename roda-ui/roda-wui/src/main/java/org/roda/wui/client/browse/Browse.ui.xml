<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:m="urn:import:org.roda.wui.client.main"
	xmlns:lists="urn:import:org.roda.wui.client.common.lists">

	<ui:style>
		.searchlist-title {
		position: absolute;
		}
	</ui:style>

	<ui:with field='messages' type='config.i18n.client.BrowseMessages' />

	<g:FlowPanel styleName="browse" addStyleNames="wrapper skip_padding">
		<g:FlowPanel addStyleNames="row full_width skip_padding">
			<g:FlowPanel addStyleNames="col_10 content">
				<g:Label styleName="h1" addStyleNames="browseTitle">
					<ui:msg description="Browser title">Browse</ui:msg>
				</g:Label>
				<m:BreadcrumbPanel ui:field="breadcrumb"
					addStyleNames="browseBreadcrumb" />
				<g:FlowPanel styleName="browseItemPanel">
					<g:SimplePanel styleName="browseItemIcon" ui:field="itemIcon" />
					<g:FlowPanel styleName="browseItemPanelText">
						<g:Label styleName="h4" addStyleNames="browseItemText"
							ui:field="itemTitle" />
						<g:Label addStyleNames="browseItemDates" ui:field="itemDates" />
					</g:FlowPanel>
				</g:FlowPanel>
				<g:TabPanel ui:field="itemMetadata" addStyleNames="browseItemMetadata" />
				<g:Label styleName="{style.searchlist-title}" addStyleNames="h4"
					ui:field="fondsPanelTitle">
					<ui:msg>Items</ui:msg>
				</g:Label>
				<lists:AIPList ui:field="fondsPanel" />
			</g:FlowPanel>
			<g:FlowPanel addStyleNames="col_2 last sidebar">
				<g:FlowPanel ui:field="sidebarData">
					<g:Label addStyleNames="h4">
						<ui:msg>View</ui:msg>
					</g:Label>
					<g:FlowPanel ui:field="downloadList">
					</g:FlowPanel>
				</g:FlowPanel>
				<g:FlowPanel ui:field="preservationSidebar">
				    <g:Label addStyleNames="h4">
						<ui:msg>Preservation</ui:msg>
					</g:Label>
					<g:Button addStyleNames="btn btn-clock" ui:field="preservationEvents">
						<ui:msg>Events</ui:msg>
					</g:Button>
				</g:FlowPanel>
				<g:FlowPanel>
					<g:Label addStyleNames="h4">
						<ui:text from='{messages.sidebarActionsTitle}' />
					</g:Label>
					<g:Button addStyleNames="btn btn-plus" ui:field="createItem">
						<ui:msg>New sub-item</ui:msg>
					</g:Button>
					<g:Button addStyleNames="btn btn-plus" ui:field="createDescriptiveMetadata">
					<ui:msg>New metadata</ui:msg>
					</g:Button>
					<g:Button addStyleNames="btn btn-edit" ui:field="moveItem">
						<ui:msg>Move</ui:msg>
					</g:Button>
					<g:Button addStyleNames="btn btn-edit" ui:field="editPermissions">
						<ui:msg>Edit permissions</ui:msg>
					</g:Button>
					<g:Button addStyleNames="btn btn-ban" ui:field="remove">
						<ui:msg>Remove</ui:msg>
					</g:Button>
				</g:FlowPanel>
			</g:FlowPanel>

		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
