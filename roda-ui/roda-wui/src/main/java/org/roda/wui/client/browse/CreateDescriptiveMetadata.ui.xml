<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:m="urn:import:org.roda.wui.main.client"
	xmlns:common="urn:import:org.roda.wui.common.client.widgets"
	xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:u="urn:import:org.roda.wui.management.user.client">

	<ui:with field='constants' type='config.i18n.client.UserManagementConstants' />
	<ui:with field='messages' type='config.i18n.client.UserManagementMessages' />

	<ui:style>
	
	</ui:style>

	<g:FlowPanel styleName="wui-browse-edit-metadata" addStyleNames="wrapper skip_padding">
		<g:FlowPanel addStyleNames="row full_width skip_padding">
			<g:FlowPanel addStyleNames="col_10 content">
				<g:Label styleName="h1">Create descriptive metadata</g:Label>
				<g:Label addStyleNames="form-label">
					Identifier
				</g:Label>
				<g:TextBox ui:field="id" addStyleNames="form-textbox" />
				<g:Label addStyleNames="form-label">
					Type
				</g:Label>
				<g:TextBox ui:field="type" addStyleNames="form-textbox" />
				<g:Label addStyleNames="form-label">
					Content
				</g:Label>
				<g:TextArea ui:field="xml" addStyleNames="form-textbox metadata-edit-area" />
				<g:HTML visible="false" ui:field="errors" addStyleNames="metadata-edit-errors" />
			</g:FlowPanel>

			<g:FlowPanel addStyleNames="col_2 last sidebar">
				<g:FlowPanel>
					<g:Label addStyleNames="h4">
						<ui:msg>Actions</ui:msg>
					</g:Label>
					<g:Button addStyleNames="btn btn-play" ui:field="buttonApply">
						Save
					</g:Button>
					<g:Button addStyleNames="btn btn-times-circle" ui:field="buttonCancel">
						Cancel
					</g:Button>

				</g:FlowPanel>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
