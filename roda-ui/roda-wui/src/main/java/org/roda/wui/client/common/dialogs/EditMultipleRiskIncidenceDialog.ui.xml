<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:m="urn:import:org.roda.wui.client.main"
	xmlns:wcag="urn:import:org.roda.wui.common.client.widgets.wcag"
	xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:lists="urn:import:org.roda.wui.client.common.lists">

	<ui:style>
		.searchlist-title {
		position: absolute;
		}

		.emptyParentButton {
		margin-right: 10px;
		}
	</ui:style>

	<ui:with field='messages' type='config.i18n.client.ClientMessages' />

	<g:FlowPanel addStyleNames="selectAip wui-dialog-confirm wrapper skip_padding">
		<g:FlowPanel addStyleNames="wui-dialog-layout">
			<g:FlowPanel>
				<g:FlowPanel addStyleNames="page-description" ui:field="titlePanel"></g:FlowPanel>
				<g:FlowPanel>
					<g:Label addStyleNames="form-label"><ui:text from='{messages.riskIncidenceStatus}' /></g:Label>
					<g:ListBox ui:field="status" addStyleNames="form-selectbox form-textbox-small form-risk-mitigation-margin" />
				</g:FlowPanel>
				<g:FlowPanel>
					<g:Label addStyleNames="form-label"><ui:text from='{messages.riskIncidenceSeverity}' /></g:Label>
					<g:ListBox ui:field="severity" addStyleNames="form-selectbox form-textbox-small form-risk-mitigation-margin" />
				</g:FlowPanel>
				<g:FlowPanel>
					<g:Label addStyleNames="form-label"><ui:text from='{messages.riskIncidenceMitigatedOn}' /></g:Label>
					<d:DateBox ui:field="mitigatedOn" addStyleNames="form-textbox form-textbox-small" />
				</g:FlowPanel>		
				<g:FlowPanel>
					<g:Label addStyleNames="form-label"><ui:text from='{messages.riskIncidenceMitigatedBy}' /></g:Label>
					<g:TextBox ui:field="mitigatedBy" addStyleNames="form-textbox" />
				</g:FlowPanel>		
				<g:FlowPanel>
					<g:Label addStyleNames="form-label"><ui:text from='{messages.riskIncidenceMitigatedDescription}' /></g:Label>
					<g:TextArea ui:field="mitigatedDescription" addStyleNames="form-textbox" />
				</g:FlowPanel>	
			</g:FlowPanel>
			<g:FlowPanel addStyleNames="wui-dialog-layout-footer">
				<g:Button addStyleNames="btn btn-link" ui:field="cancelButton">
					<ui:text from='{messages.selectAipCancelButton}' />
				</g:Button>
				<g:Button addStyleNames="btn btn-play" ui:field="selectButton">
					<ui:text from='{messages.selectAipSelectButton}' />
				</g:Button>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
