<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:wcag="urn:import:org.roda.wui.common.client.widgets.wcag"
	xmlns:common="urn:import:org.roda.wui.client.common" xmlns:lists="urn:import:org.roda.wui.client.common.lists">

	<ui:with field='messages' type='config.i18n.client.ClientMessages' />

	<ui:style>

	</ui:style>

	<g:FlowPanel addStyleNames="panel representation">
		<g:FlowPanel addStyleNames="panel-body">
			<g:FlowPanel addStyleNames="representationPanel">
				<g:SimplePanel addStyleNames="representationIconPanel"
					ui:field="representationIconPanel">
					<g:HTMLPanel addStyleNames="representationIcon"
						ui:field="representationIcon" />
				</g:SimplePanel>
				<g:VerticalPanel addStyleNames="representationDataPanel">
					<g:Label addStyleNames="representationType" ui:field="representationType"></g:Label>
					<g:Label addStyleNames="representationInformation"
						ui:field="representationInformation"></g:Label>
					<g:Label addStyleNames="representationId" ui:field="representationId"></g:Label>
				</g:VerticalPanel>
				<g:TabPanel ui:field="itemMetadata" addStyleNames="browseItemMetadata" />
				<g:FlowPanel styleName="browseNewDescriptiveMetadataButton">
					<g:Button addStyleNames="btn btn-plus" ui:field="newDescriptiveMetadata">
						<ui:text from='{messages.newDescriptiveMetadataTitle}' />
					</g:Button>
				</g:FlowPanel>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
