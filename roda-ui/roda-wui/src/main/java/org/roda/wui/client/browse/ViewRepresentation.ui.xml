<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:m="urn:import:org.roda.wui.client.main"
	xmlns:wcag="urn:import:org.roda.wui.common.client.widgets.wcag"
	xmlns:lists="urn:import:org.roda.wui.client.common.lists">

	<ui:with field='messages' type='config.i18n.client.BrowseMessages' />

	<ui:style>
	.searchlist-title {
		position: absolute;
	}
	</ui:style>

	<g:FlowPanel styleName="viewRepresentation" addStyleNames="wrapper skip_padding">
		<g:FlowPanel addStyleNames="row full_width skip_padding">

			<g:HorizontalPanel ui:field="previewPanel">
				<!-- LEFT PANEL -->
				<g:FlowPanel ui:field="filesPanel">
					<g:FlowPanel styleName="searchPanel">
						<wcag:AccessibleFocusPanel styleName="searchButton"
							ui:field="searchInputButton">
							<g:HTML addStyleNames="searchButton-html">
								<span class="fa-stack fa-lg">
									<i class="fa fa-circle fa-stack-2x"></i>
									<i class="fa fa-search fa-stack-1x"></i>
								</span>
							</g:HTML>
						</wcag:AccessibleFocusPanel>
						<g:FlowPanel styleName="searchPanelLeft">
							<g:TextBox ui:field="searchInputBox" addStyleNames="searchBox" />
						</g:FlowPanel>
					</g:FlowPanel>
					<g:FlowPanel addStyleNames="fileListScroll">
						<lists:FileList ui:field="filesList" />
					</g:FlowPanel>
				</g:FlowPanel>

				<!-- RIGHT PANEL -->
				<g:FlowPanel ui:field="filePreviewPanel">
					<g:FlowPanel addStyleNames="filePreviewToolbar">
						<m:BreadcrumbPanel ui:field="breadcrumb"
							addStyleNames="viewRepresentationBreadcrumb" />
						<g:FlowPanel addStyleNames="filePreviewToolbarIcons">
							<g:FocusPanel ui:field="infoFile"
								addStyleNames="filePreviewToolbarIcon filePreviewToolbarInfoIcon">
								<g:HTML>
									<i class="fa fa-info-circle"></i>
								</g:HTML>
							</g:FocusPanel>
							<g:FocusPanel ui:field="downloadFile"
								addStyleNames="filePreviewToolbarIcon filePreviewToolbarDownloadIcon">
								<g:HTML>
									<i class="fa fa-download"></i>
								</g:HTML>
							</g:FocusPanel>
						</g:FlowPanel>
					</g:FlowPanel>
					<g:FlowPanel addStyleNames="col_10 content" ui:field="filePreview">
					</g:FlowPanel>

					<!-- INFO PANEL -->
					<g:FlowPanel addStyleNames="infoFilePanel">
						<g:Label styleName="h1" addStyleNames="infoFileTitle">
							<ui:msg description="title">File informations</ui:msg>
						</g:Label>
						<g:FlexTable>
						</g:FlexTable>
						<g:HTML>
							<table>
								<tbody>
									<tr>
										<td>Filename</td>
										<td>Teste</td>
									</tr>
									<tr>
										<td>Size</td>
										<td>35kb</td>
									</tr>
									<tr>
										<td>Mimetype</td>
										<td>image/png</td>
									</tr>
									<tr>
										<td>Extension</td>
										<td>png</td>
									</tr>
									<tr>
										<td>PRONOM</td>
										<td>fmt/144</td>
									</tr>
									<tr>
										<td>Creation date</td>
										<td>2016/01/07</td>
									</tr>
									<tr>
										<td>Path</td>
										<td>Folder1 > Folder2 > Folder3 > Folder4</td>
									</tr>
								</tbody>
							</table>
						</g:HTML>
					</g:FlowPanel>
				</g:FlowPanel>
			</g:HorizontalPanel>

