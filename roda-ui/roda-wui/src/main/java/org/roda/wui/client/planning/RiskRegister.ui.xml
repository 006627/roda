<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:wcag="urn:import:org.roda.wui.common.client.widgets.wcag"
	xmlns:lists="urn:import:org.roda.wui.client.common.lists">

	<ui:style>

	</ui:style>

	<ui:with field='messages' type='config.i18n.client.BrowseMessages' />

	<g:FlowPanel styleName="wui-risk-register" addStyleNames="wrapper skip_padding">
		<g:FlowPanel addStyleNames="row full_width skip_padding">
			<g:FlowPanel addStyleNames="col_10 content">
				<g:Label styleName="h1">
					<ui:text from='{messages.riskRegisterTitle}' />
				</g:Label>
				<g:FlowPanel addStyleNames="page-description" ui:field="riskRegisterDescription">
				</g:FlowPanel>
				<g:FlowPanel styleName="searchPanel" ui:field="searchPanel">
					<g:FlowPanel styleName="searchPanelLeft">
						<g:TextBox ui:field="searchInputBox" addStyleNames="searchBox" />
					</g:FlowPanel>
					<g:FlowPanel styleName="searchPanelRight">
						<wcag:AccessibleFocusPanel styleName="searchButton"
							ui:field="searchInputButton">
							<g:HTML addStyleNames="searchButton-html">
								<span class="fa-stack fa-lg">
									<i class="fa fa-search fa-stack-1x"></i>
								</span>
							</g:HTML>
						</wcag:AccessibleFocusPanel>
					</g:FlowPanel>
				</g:FlowPanel>
				<!-- <lists:LogEntryList addStyleNames="searchResults" -->
				<!-- ui:field="logList" /> -->
			</g:FlowPanel>

			<g:FlowPanel addStyleNames="col_2 last sidebar">
				<g:FlowPanel addStyleNames="sidebar-facet-panel facet-empty">
					<g:Label addStyleNames="h5 sidebar-facet-title">
						<ui:text from='{messages.riskRegisterCategory}' />
					</g:Label>
					<g:FlowPanel ui:field="facetCategories" />
				</g:FlowPanel>
				<g:FlowPanel addStyleNames="sidebar-facet-panel facet-empty">
					<g:Label addStyleNames="h5 sidebar-facet-title">
						<ui:text from='{messages.riskRegisterSeverity}' />
					</g:Label>
					<g:FlowPanel ui:field="facetSeverities" />
				</g:FlowPanel>
				<g:Label addStyleNames="h5 sidebar-facet-title">
					<ui:text from='{messages.sidebarFilterDates}' />
				</g:Label>
				<d:DateBox
					addStyleNames="sidebar-facet-input fieldTextBox sidebar-facet-input-date"
					ui:field="inputDateInitial" />
				<g:Label addStyleNames="sidebar-facet-date-separator">-</g:Label>
				<d:DateBox
					addStyleNames="sidebar-facet-input fieldTextBox sidebar-facet-input-date"
					ui:field="inputDateFinal" />
				<g:FlowPanel ui:field="risksSidebar">
					<g:Label addStyleNames="h4">
						<ui:text from='{messages.sidebarRisksTitle}' />
					</g:Label>
					<g:Button addStyleNames="btn btn-plus" ui:field="buttonAdd">
						<ui:text from='{messages.riskRegisterNewButton}' />
					</g:Button>
					<g:Button addStyleNames="btn btn-edit" ui:field="buttonEdit">
						<ui:text from='{messages.riskRegisterEditButton}' />
					</g:Button>
					<g:Button addStyleNames="btn btn-ban" ui:field="buttonRemove">
						<ui:text from='{messages.riskRegisterRemoveButton}' />
					</g:Button>
				</g:FlowPanel>
				<g:FlowPanel>
					<g:Label addStyleNames="h4">
						<ui:text from='{messages.sidebarActionsTitle}' />
					</g:Label>
					<g:Button addStyleNames="btn btn-play" ui:field="startProcess">
						<ui:text from='{messages.riskRegisterProcessButton}' />
					</g:Button>
				</g:FlowPanel>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
