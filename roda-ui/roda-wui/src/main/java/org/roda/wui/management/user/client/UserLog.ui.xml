<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:common="urn:import:org.roda.wui.client.common">

	<ui:style>
	
	</ui:style>

	<g:FlowPanel styleName="wui-log" addStyleNames="wrapper skip_padding">
		<g:FlowPanel addStyleNames="row full_width skip_padding">
			<g:FlowPanel addStyleNames="col_10 content">
				<g:Label styleName="h1">Log</g:Label>
				<common:LogEntryList addStyleNames="searchResults"
					ui:field="logList" />
			</g:FlowPanel>

			<g:FlowPanel addStyleNames="col_2 last sidebar">
				<g:Label addStyleNames="h4">
					<ui:msg>Filters</ui:msg>
				</g:Label>
				<g:FlowPanel addStyleNames="sidebar-facet-panel facet-empty">
					<g:Label addStyleNames="h5 sidebar-facet-title">
						<ui:msg>Components</ui:msg>
					</g:Label>
					<g:FlowPanel ui:field="facetComponents" />
				</g:FlowPanel>
				<g:FlowPanel addStyleNames="sidebar-facet-panel facet-empty">
					<g:Label addStyleNames="h5 sidebar-facet-title">
						<ui:msg>Methods</ui:msg>
					</g:Label>
					<g:FlowPanel ui:field="facetMethods" />
				</g:FlowPanel>
				<g:FlowPanel addStyleNames="sidebar-facet-panel facet-empty">
					<g:Label addStyleNames="h5 sidebar-facet-title">
						<ui:msg>Users</ui:msg>
					</g:Label>
					<g:FlowPanel ui:field="facetUsers" />
				</g:FlowPanel>
				<g:Label addStyleNames="h5 sidebar-facet-title">
					<ui:msg>From date</ui:msg>
				</g:Label>
				<d:DateBox addStyleNames="sidebar-facet-input fieldTextBox"
					ui:field="inputDateInitial" />
				<g:Label addStyleNames="h5 sidebar-facet-title">
					<ui:msg>To date</ui:msg>
				</g:Label>
				<d:DateBox addStyleNames="sidebar-facet-input fieldTextBox"
					ui:field="inputDateFinal" />
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
