<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client">

	<ui:with field='constants' type='config.i18n.client.UserManagementConstants' />

	<g:FlowPanel addStyleNames="recoverPanel">
		<g:HTML>
			<h1>
				<ui:text from='{constants.resetPasswordTitle}' />
			</h1>
		</g:HTML>
		<g:FlowPanel ui:field="recoverPanel">
			<g:Label ui:field="usernameLabel" addStyleNames="form-label">
				<ui:text from='{constants.resetPasswordUsername}' />
			</g:Label>
			<g:TextBox ui:field="username" addStyleNames="fieldTextBox"></g:TextBox>
			<g:Label ui:field="tokenLabel" addStyleNames="form-label">
				<ui:text from='{constants.resetPasswordToken}' />
			</g:Label>
			<g:TextBox ui:field="token" addStyleNames="fieldTextBox"></g:TextBox>
			<g:Label addStyleNames="form-label">
				<ui:text from='{constants.resetPasswordNewPassword}' />
			</g:Label>
			<g:PasswordTextBox ui:field="password"
				addStyleNames="fieldTextBox"></g:PasswordTextBox>
			<g:Label addStyleNames="form-label">
				<ui:text from='{constants.resetPasswordRepeatPassword}' />
			</g:Label>
			<g:PasswordTextBox ui:field="passwordRepeat"
				addStyleNames="fieldTextBox"></g:PasswordTextBox>
		</g:FlowPanel>
		<g:FlowPanel addStyleNames="recover-buttons">
			<g:Label ui:field="cancel" addStyleNames="recover-link">
				<ui:text from='{constants.resetPasswordCancel}' />
			</g:Label>
			<g:Button ui:field="reset" addStyleNames="btn btn-play recover-button">
				<ui:text from='{constants.resetPasswordSubmit}' />
			</g:Button>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>

