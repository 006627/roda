<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:common="urn:import:org.roda.wui.client.common">

	<ui:style>
	
	</ui:style>

	<g:FlowPanel styleName="wui-management-user" addStyleNames="wrapper skip_padding">
		<g:FlowPanel addStyleNames="row full_width skip_padding">
			<g:FlowPanel addStyleNames="col_10 content">
				<g:Label styleName="h1">Users and groups</g:Label>
				<!-- <common:LogEntryList addStyleNames="searchResults" -->
				<!-- ui:field="logList" /> -->
				<common:RodaMemberList addStyleNames="searchResults"
					ui:field="list" />
			</g:FlowPanel>
			<g:FlowPanel addStyleNames="col_2 last sidebar">
				<g:FlowPanel>
					<g:Label addStyleNames="h4">
						<ui:msg>Filters</ui:msg>
					</g:Label>
					<g:FlowPanel addStyleNames="sidebar-facet-panel facet-empty">
						<g:Label addStyleNames="h5 sidebar-facet-title">
							<ui:msg>Status</ui:msg>
						</g:Label>
						<g:FlowPanel ui:field="facetIsActive" />
					</g:FlowPanel>
					<g:FlowPanel addStyleNames="sidebar-facet-panel facet-empty">
						<g:Label addStyleNames="h5 sidebar-facet-title">
							<ui:msg>Type</ui:msg>
						</g:Label>
						<g:FlowPanel ui:field="facetIsUser" />
					</g:FlowPanel>
					<g:FlowPanel addStyleNames="sidebar-facet-panel facet-empty">
						<g:Label addStyleNames="h5 sidebar-facet-title">
							<ui:msg>Groups</ui:msg>
						</g:Label>
						<g:FlowPanel ui:field="facetGroups" />
					</g:FlowPanel>
				</g:FlowPanel>
				<g:FlowPanel>
					<g:Label addStyleNames="h5">
						<ui:msg>Actions</ui:msg>
					</g:Label>
					<g:Button addStyleNames="btn btn-plus" ui:field="buttonAddUser">Add user</g:Button>
					<g:Button addStyleNames="btn btn-plus" ui:field="buttonAddGroup">Add group</g:Button>
				</g:FlowPanel>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
