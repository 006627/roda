<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client">

	<g:FlowPanel addStyleNames="loginPanel">
		<g:HTML>
			<h1>Login</h1>
		</g:HTML>
		<g:FlowPanel>
			<g:Label addStyleNames="form-label">Username</g:Label>
			<g:TextBox ui:field="username" addStyleNames="fieldTextBox"></g:TextBox>
			<g:Label addStyleNames="form-label">Password</g:Label>
			<g:PasswordTextBox ui:field="password"
				addStyleNames="fieldTextBox"></g:PasswordTextBox>
		</g:FlowPanel>
		<g:Label ui:field="error" addStyleNames="login-error"></g:Label>
		<g:FlowPanel addStyleNames="login-buttons">
		    <g:Button ui:field="login" addStyleNames="btn btn-play login-button">Login</g:Button>
		    <g:Label ui:field="recover" addStyleNames="btn btn-link login-link pull-right">Recover password</g:Label>
		    <g:Label ui:field="register" addStyleNames="btn btn-link login-link pull-right">Sign up</g:Label>
		</g:FlowPanel>		
	</g:FlowPanel>

</ui:UiBinder>
