<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:u="urn:import:org.roda.wui.management.user.client" xmlns:s="urn:import:com.google.gwt.safehtml.shared" 
	xmlns:lists="urn:import:org.roda.wui.client.common.lists">

	<ui:with field='constants' type='config.i18n.client.UserManagementConstants' />

	<ui:style>

	</ui:style>
	
	<ui:with field='messages' type='config.i18n.client.BrowseMessages' />

	<g:FlowPanel styleName="wui-user-data" addStyleNames="wrapper skip_padding">
		<g:FlowPanel addStyleNames="row full_width no_padding">
			<g:FlowPanel addStyleNames="wui-data-panel">
				<g:Label styleName="h1" ui:field="title">Risk</g:Label>
				<g:FlowPanel styleName="field">
					<g:Label styleName="label">Identifier</g:Label>
					<g:Label styleName="value" ui:field="riskId" />
				</g:FlowPanel>
				<g:FlowPanel styleName="field">
					<g:Label styleName="label">Name</g:Label>
					<g:Label styleName="value" ui:field="riskName" />
				</g:FlowPanel>
				<g:FlowPanel styleName="field">
					<g:Label styleName="label" ui:field="riskDescriptionKey">Description</g:Label>
					<g:Label styleName="value text-area-whitespace-wrap" ui:field="riskDescriptionValue" />
				</g:FlowPanel>
				<g:FlowPanel styleName="field">
					<g:Label styleName="label">Identified on</g:Label>
					<g:Label styleName="value" ui:field="riskIdentifiedOn" />
				</g:FlowPanel>
				<g:FlowPanel styleName="field">
					<g:Label styleName="label">Identified by</g:Label>
					<g:Label styleName="value" ui:field="riskIdentifiedBy" />
				</g:FlowPanel>
				<g:FlowPanel styleName="field">
					<g:Label styleName="label">Category</g:Label>
					<g:Label styleName="value" ui:field="riskCategory" />
				</g:FlowPanel>
				<g:FlowPanel styleName="field">
					<g:Label styleName="label" ui:field="riskNotesKey">Notes</g:Label>
					<g:Label styleName="value text-area-whitespace-wrap" ui:field="riskNotesValue" />
				</g:FlowPanel>
				
				<g:Label styleName="h4" ui:field="riskPreMitigationKey">Pre-mitigation</g:Label>
				<g:FlowPanel styleName="field">
					<g:Label styleName="label">Probability</g:Label>
					<g:Label styleName="value" ui:field="riskPreMitigationProbability" />
				</g:FlowPanel>
				<g:FlowPanel styleName="field">
					<g:Label styleName="label">Impact</g:Label>
					<g:Label styleName="value" ui:field="riskPreMitigationImpact" />
				</g:FlowPanel>
				<g:FlowPanel styleName="field">
					<g:Label styleName="label">Severity</g:Label>
					<g:HTML styleName="value" ui:field="riskPreMitigationSeverity"></g:HTML>
				</g:FlowPanel>
				<g:FlowPanel styleName="field">
					<g:Label styleName="label" ui:field="riskPreMitigationNotesKey">Notes</g:Label>
					<g:Label styleName="value text-area-whitespace-wrap" ui:field="riskPreMitigationNotesValue" />
				</g:FlowPanel>
				
				<g:Label styleName="h4" ui:field="riskMitigationKey">Mitigation</g:Label>
				<g:FlowPanel styleName="field">
					<g:Label styleName="label" ui:field="riskMitigationStrategyKey">Mitigation strategy/actions</g:Label>
					<g:Label styleName="value text-area-whitespace-wrap" ui:field="riskMitigationStrategyValue" />	
				</g:FlowPanel>
				<g:FlowPanel styleName="field">
					<g:Label styleName="label" ui:field="riskMitigationOwnerTypeKey">Risk owner type</g:Label>
					<g:Label styleName="value" ui:field="riskMitigationOwnerTypeValue" />
				</g:FlowPanel>
				<g:FlowPanel styleName="field">
					<g:Label styleName="label" ui:field="riskMitigationOwnerKey">Risk owner</g:Label>
					<g:Label styleName="value" ui:field="riskMitigationOwnerValue" />
				</g:FlowPanel>
				<g:FlowPanel styleName="field">
					<g:Label styleName="label" ui:field="riskMitigationRelatedEventIdentifierTypeKey">Related event identifier type</g:Label>
					<g:Label styleName="value" ui:field="riskMitigationRelatedEventIdentifierTypeValue" />
				</g:FlowPanel>
				<g:FlowPanel styleName="field">
					<g:Label styleName="label" ui:field="riskMitigationRelatedEventIdentifierValueKey">Related event identifier value</g:Label>
					<g:Label styleName="value" ui:field="riskMitigationRelatedEventIdentifierValueValue" />
				</g:FlowPanel>
				
				<g:Label styleName="h4" ui:field="riskPosMitigationKey">Post-mitigation</g:Label>
				<g:FlowPanel styleName="field">
					<g:Label styleName="label" ui:field="riskPosMitigationProbabilityKey">Probability</g:Label>
					<g:Label styleName="value" ui:field="riskPosMitigationProbability" />
				</g:FlowPanel>
				<g:FlowPanel styleName="field">
					<g:Label styleName="label" ui:field="riskPosMitigationImpactKey">Impact</g:Label>
					<g:Label styleName="value" ui:field="riskPosMitigationImpact" />
				</g:FlowPanel>
				<g:FlowPanel styleName="field">
					<g:Label styleName="label" ui:field="riskPosMitigationSeverityKey">Severity</g:Label>
					<g:HTML styleName="value" ui:field="riskPosMitigationSeverity"></g:HTML>
				</g:FlowPanel>
				<g:FlowPanel styleName="field">
					<g:Label styleName="label" ui:field="riskPosMitigationNotesKey">Notes</g:Label>
					<g:Label styleName="value text-area-whitespace-wrap" ui:field="riskPosMitigationNotesValue" />
				</g:FlowPanel>
				
 				<g:Label styleName="h4">Incidence List</g:Label> 
 				<lists:RiskIncidenceList addStyleNames="searchResults" ui:field="incidenceList" /> 
				
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
