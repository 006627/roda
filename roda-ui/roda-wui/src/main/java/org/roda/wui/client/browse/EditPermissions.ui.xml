<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:wcag="urn:import:org.roda.wui.common.client.widgets.wcag"
	xmlns:common="urn:import:org.roda.wui.client.common" xmlns:lists="urn:import:org.roda.wui.client.common.lists">

	<ui:style>
	
	</ui:style>

	<g:FlowPanel styleName="wui-management-user" addStyleNames="wrapper skip_padding">
		<g:FlowPanel addStyleNames="row full_width skip_padding">
			<g:FlowPanel addStyleNames="col_10 content">
				<g:Label styleName="h1">Archival package permissions</g:Label>
				<g:Label styleName="h4" ui:field="groupPermissionsHeader">Assigned groups</g:Label>
				<g:FlowPanel ui:field="groupPermissionsPanel" />
				<g:Label styleName="h4" ui:field="userPermissionsHeader">Assigned users</g:Label>
				<g:FlowPanel ui:field="userPermissionsPanel" />
			</g:FlowPanel>
			<g:FlowPanel addStyleNames="col_2 last sidebar">
				<g:FlowPanel>
					<g:Label addStyleNames="h5">
						<ui:msg>Actions</ui:msg>
					</g:Label>
					<g:Button addStyleNames="btn btn-plus" ui:field="buttonAdd">
						Add permission
					</g:Button>
					<g:Button addStyleNames="btn btn-play" ui:field="buttonApply">
						Save
					</g:Button>
					<g:Button addStyleNames="btn btn-play" ui:field="buttonApplyToAll">
						Apply to all below
					</g:Button>
					<g:Button addStyleNames="btn btn-default btn-times-circle" ui:field="buttonClose">
						Back
					</g:Button>
				</g:FlowPanel>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
