<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client">

	<ui:with field='constants' type='config.i18n.client.UserManagementConstants' />

	<g:FlowPanel addStyleNames="recoverPanel">
		<g:HTML>
			<h1>
				<ui:text from='{constants.recoverLoginTitle}' />
			</h1>
		</g:HTML>
		<g:FlowPanel ui:field="recoverPanel">
			<g:Label addStyleNames="form-label">
				<ui:text from='{constants.recoverLoginUsernameOrEmail}' />
			</g:Label>
			<g:TextBox ui:field="usernameOrEmail" addStyleNames="fieldTextBox"></g:TextBox>
		</g:FlowPanel>
		<g:FlowPanel addStyleNames="recover-buttons">
			<g:Label ui:field="cancel" addStyleNames="btn btn-link recover-link pull-right">
				<ui:text from='{constants.recoverLoginCancel}' />
			</g:Label>
			<g:Button ui:field="recover" addStyleNames="btn btn-play recover-button">
				<ui:text from='{constants.recoverLoginSubmit}' />
			</g:Button>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>