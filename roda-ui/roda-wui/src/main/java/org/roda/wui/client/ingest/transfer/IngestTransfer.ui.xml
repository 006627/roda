<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:common="urn:import:org.roda.wui.client.common"
	xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:m="urn:import:org.roda.wui.client.main">

	<ui:style>
	
	</ui:style>

	<ui:with field='messages' type='config.i18n.client.BrowseMessages' />

	<g:FlowPanel styleName="wui-ingest-transfer" addStyleNames="wrapper skip_padding">
		<g:FlowPanel addStyleNames="row full_width skip_padding">
			<g:FlowPanel addStyleNames="col_10 content">
				<g:Label styleName="h1">Ingest transfer</g:Label>
				<m:BreadcrumbPanel ui:field="breadcrumb" />
				<g:FlowPanel styleName="browseItemPanel">
					<g:SimplePanel styleName="browseItemIcon" ui:field="itemIcon" />
					<g:FlowPanel styleName="browseItemPanelText">
						<g:Label styleName="h4" addStyleNames="browseItemText"
							ui:field="itemTitle" />
						<g:Label addStyleNames="browseItemDates" ui:field="itemDates" />
					</g:FlowPanel>
				</g:FlowPanel>
				<common:TransferredResourceList
					addStyleNames="transferredResourceList" ui:field="transferredResourceList" />
			</g:FlowPanel>
			<g:FlowPanel addStyleNames="col_2 last sidebar">
				<g:FlowPanel ui:field="filtersPanel">
					<g:Label addStyleNames="h4">
						<ui:text from='{messages.sidebarFiltersTitle}' />
					</g:Label>
					<g:FlowPanel addStyleNames="sidebar-facet-panel facet-empty">
						<g:Label addStyleNames="h5 sidebar-facet-title">
							<ui:text from='{messages.ingestTransferFilterProducers}' />
						</g:Label>
						<g:FlowPanel ui:field="facetOwner" />
					</g:FlowPanel>
				</g:FlowPanel>
				<g:FlowPanel>
					<g:Label addStyleNames="h4">
						<ui:text from='{messages.sidebarActionsTitle}' />
					</g:Label>
					<g:Button addStyleNames="btn btn-upload" ui:field="uploadFiles">
						<ui:text from='{messages.ingestTransferButtonUploadFiles}' />
					</g:Button>
					<g:Button addStyleNames="btn btn-plus" ui:field="createFolder">
						<ui:text from='{messages.ingestTransferButtonCreateFolder}' />
					</g:Button>
					<g:Button addStyleNames="btn btn-ban" ui:field="remove">
						<ui:text from='{messages.ingestTransferButtonRemoveWholeFolder}' />
					</g:Button>
					<g:Button addStyleNames="btn btn-play" ui:field="startIngest">
						<ui:text from='{messages.ingestTransferButtonIngestWholeFolder}' />
					</g:Button>
				</g:FlowPanel>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
