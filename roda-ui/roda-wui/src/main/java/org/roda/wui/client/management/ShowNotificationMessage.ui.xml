<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:u="urn:import:org.roda.wui.management.user.client">

	<ui:with field='constants' type='config.i18n.client.UserManagementConstants' />

	<ui:style>

	</ui:style>

	<g:FlowPanel styleName="wui-management-user" addStyleNames="wrapper skip_padding">
		<g:FlowPanel addStyleNames="row full_width skip_padding">
			<g:FlowPanel addStyleNames="col_10 content">
				<g:Label styleName="h1">Message</g:Label>
				<g:Label styleName="descriptiveMetadata-field-key">Identifier</g:Label>
				<g:Label ui:field="messageId" />
				<g:Label styleName="descriptiveMetadata-field-key">Subject</g:Label>
				<g:Label ui:field="messageSubject" />
				<g:Label styleName="descriptiveMetadata-field-key">Body</g:Label>
				<g:HTML ui:field="messageBody" />
				<g:Label styleName="descriptiveMetadata-field-key">Sent On</g:Label>
				<g:Label ui:field="messageSentOn" />
				<g:Label styleName="descriptiveMetadata-field-key">From User</g:Label>
				<g:Label ui:field="messageFromUser" />
				<g:Label styleName="descriptiveMetadata-field-key">Is Acknowledged</g:Label>
				<g:Label ui:field="messageIsAcknowledged" />
				
				<g:Label styleName="descriptiveMetadata-field-key" ui:field="acknowledgedUsersKey">Acknowledged Users</g:Label>
				<g:HTML ui:field="acknowledgedUsersValue" />
				<g:Label styleName="descriptiveMetadata-field-key" ui:field="notAcknowledgedUsersKey">Not Acknowledged Users</g:Label>
				<g:HTML ui:field="notAcknowledgedUsersValue" />
			</g:FlowPanel>

			<g:FlowPanel addStyleNames="col_2 last sidebar">
				<g:FlowPanel>
					<g:Label addStyleNames="h4">
						<ui:msg>Actions</ui:msg>
					</g:Label>
					<g:Button addStyleNames="btn btn-times-circle" ui:field="buttonCancel">
						<ui:text from='{constants.editUserCancel}' />
					</g:Button>
				</g:FlowPanel>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
