<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:u="urn:import:org.roda.wui.management.user.client">

	<ui:with field='constants' type='config.i18n.client.UserManagementConstants' />

	<ui:style>

	</ui:style>

	<g:FlowPanel styleName="wui-management-user" addStyleNames="wrapper skip_padding">
		<g:FlowPanel addStyleNames="row full_width skip_padding">
			<g:FlowPanel addStyleNames="col_10 content">
				<g:FlowPanel styleName="wui-user-data" addStyleNames="wrapper skip_padding">
					<g:FlowPanel addStyleNames="row full_width no_padding">
						<g:FlowPanel addStyleNames="wui-data-panel">
							<g:Label styleName="h1">Message</g:Label>
							<g:FlowPanel styleName="field">
								<g:Label styleName="label">Identifier</g:Label>
								<g:Label styleName="value" ui:field="messageId" />
							</g:FlowPanel>
							<g:FlowPanel styleName="field">
								<g:Label styleName="label">Subject</g:Label>
								<g:Label styleName="value" ui:field="messageSubject" />
							</g:FlowPanel>
							<g:FlowPanel styleName="field">
								<g:Label styleName="label">Body</g:Label>
								<g:HTML styleName="value" ui:field="messageBody" />
							</g:FlowPanel>
							<g:FlowPanel styleName="field">
								<g:Label styleName="label">Sent On</g:Label>
								<g:Label styleName="value" ui:field="messageSentOn" />
							</g:FlowPanel>
							<g:FlowPanel styleName="field">
								<g:Label styleName="label">From User</g:Label>
								<g:Label styleName="value" ui:field="messageFromUser" />
							</g:FlowPanel>
							<g:FlowPanel styleName="field">
								<g:Label styleName="label">Is Acknowledged</g:Label>
								<g:Label styleName="value" ui:field="messageIsAcknowledged" />
							</g:FlowPanel>
							
							<g:FlowPanel styleName="field">				
								<g:Label styleName="label" ui:field="acknowledgedUsersKey">Acknowledged Users</g:Label>
								<g:HTML styleName="value" ui:field="acknowledgedUsersValue" />
							</g:FlowPanel>
							<g:FlowPanel styleName="field">
								<g:Label styleName="label" ui:field="notAcknowledgedUsersKey">Not Acknowledged Users</g:Label>
								<g:HTML styleName="value" ui:field="notAcknowledgedUsersValue" />
							</g:FlowPanel>
						</g:FlowPanel>
					</g:FlowPanel>
				</g:FlowPanel>
			</g:FlowPanel>

			<g:FlowPanel addStyleNames="col_2 last sidebar">
				<g:FlowPanel>
					<g:Label addStyleNames="h4">
						<ui:msg>Actions</ui:msg>
					</g:Label>
					<g:Button addStyleNames="btn btn-times-circle" ui:field="buttonCancel">
						<ui:text from='{constants.editUserCancel}' />
					</g:Button>
				</g:FlowPanel>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
