<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:lists="urn:import:org.roda.wui.client.common.lists"
	xmlns:wcag="urn:import:org.roda.wui.common.client.widgets.wcag"
	xmlns:d="urn:import:com.google.gwt.user.datepicker.client">

	<ui:style>
		.addbutton {
		margin-left: 10px;
		}

		.searchbutton {
		float: right;
		margin-top: 5px;
		}
	</ui:style>

	<ui:with field='messages' type='config.i18n.client.BrowseMessages' />

	<g:FlowPanel styleName="search" addStyleNames="wrapper skip_padding">
		<g:FlowPanel addStyleNames="row full_width skip_padding">
			<g:FlowPanel addStyleNames="col_10 content">
				<g:HTML>
					<h1>Search</h1>
				</g:HTML>
				<g:HTML addStyleNames="page-description" ui:field="searchDescription">
					<p>
						Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec
						laoreet
						at sapien vel efficitur. Mauris lacinia nisi a luctus
						lacinia.
						Donec est est, scelerisque pulvinar eros a, tempus rutrum
						augue.
						Integer scelerisque volutpat metus, a congue libero
						ullamcorper
						non. Integer gravida viverra mi, sit amet ultrices
						lacus efficitur
						sed. Maecenas vitae varius dolor. Curabitur ut
						ultrices leo.
						Vivamus sollicitudin orci ut pellentesque maximus.
						Nam in enim
						malesuada, vestibulum purus ac, porta risus. Lorem
						ipsum dolor sit
						amet, consectetur adipiscing elit.
					</p>
				</g:HTML>
				<g:FlowPanel styleName="searchPanel">
					<g:FlowPanel styleName="searchPanelLeft">
						<g:TextBox ui:field="searchInputBox" addStyleNames="searchBox" />
						<!-- <g:Hyperlink addStyleNames="searchInputAdvancedLink" -->
						<!-- targetHistoryToken="dissemination.search.advanced">More search 
							options</g:Hyperlink> -->
					</g:FlowPanel>
					<wcag:AccessibleFocusPanel styleName="searchButton"
						ui:field="searchInputButton">
						<g:HTML addStyleNames="searchButton-html">
							<span class="fa-stack fa-lg">
								<i class="fa fa-circle fa-stack-2x"></i>
								<i class="fa fa-search fa-stack-1x"></i>
							</span>
						</g:HTML>
					</wcag:AccessibleFocusPanel>
				</g:FlowPanel>
<!-- 				<g:DisclosurePanel addStyleNames="searchAdvancedDisclosure" -->
<!-- 					ui:field="searchAdvancedDisclosure"> -->
<!-- 					<g:header>More search options</g:header> -->
					<g:FlowPanel addStyleNames="searchAdvancedPanel">
						<!-- <g:FlowPanel addStyleNames="searchAdvancedField"> <g:Label addStyleNames="form-label"
							ui:field="advancedSearchInputTitleLabel">Title</g:Label> <g:TextBox addStyleNames="form-textbox"
							ui:field="advancedSearchInputTitle" /> </g:FlowPanel> -->
						<g:FlowPanel ui:field="searchAdvancedFieldsPanel"
							styleName="searchAdvancedFieldsPanel empty" />
						<g:FlowPanel styleName="searchAdvancedFieldAdd">
							<g:ListBox styleName="form-listbox" ui:field="searchAdvancedFieldOptions">
								<g:item>Scope and content</g:item>
								<g:item>Producer</g:item>
								<g:item>Author</g:item>
								<g:item>Physical location</g:item>
								<g:item>Arrangement</g:item>
							</g:ListBox>
							<g:Button styleName="btn btn-plus {style.addbutton}"
								ui:field="searchAdvancedFieldOptionsAdd">Add search field</g:Button>
							<g:Button styleName="btn btn-search {style.searchbutton}"
								ui:field="searchAdvancedGo" enabled="false">Search</g:Button>
						</g:FlowPanel>
					</g:FlowPanel>
<!-- 				</g:DisclosurePanel> -->
				<lists:AIPList addStyleNames="searchResults" ui:field="searchResultPanel" />
			</g:FlowPanel>
			<g:FlowPanel addStyleNames="col_2 last sidebar">
				<g:FlowPanel styleName="sidebar-group" ui:field="sidebarGroupDownloads">
					<g:FlowPanel addStyleNames="sidebar-facet-panel facet-empty">
						<g:Label addStyleNames="h5 sidebar-facet-title">
							Description levels
						</g:Label>
						<g:FlowPanel ui:field="facetDescriptionLevels" />
					</g:FlowPanel>
					<g:FlowPanel addStyleNames="sidebar-facet-panel facet-empty">
						<g:Label addStyleNames="h5 sidebar-facet-title">
							Representations
						</g:Label>
						<g:FlowPanel ui:field="facetHasRepresentations" />
					</g:FlowPanel>
					<g:Label addStyleNames="h5 sidebar-facet-title">
						<ui:text from='{messages.sidebarFilterDates}' />
					</g:Label>
					<d:DateBox addStyleNames="sidebar-facet-input fieldTextBox sidebar-facet-input-date"
						ui:field="inputDateInitial" />
					<g:Label addStyleNames="sidebar-facet-date-separator">-</g:Label>
					<d:DateBox addStyleNames="sidebar-facet-input fieldTextBox sidebar-facet-input-date"
						ui:field="inputDateFinal" />
				</g:FlowPanel>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
