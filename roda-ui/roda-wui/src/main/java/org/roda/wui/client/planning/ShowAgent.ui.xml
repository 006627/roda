<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:u="urn:import:org.roda.wui.management.user.client" xmlns:lists="urn:import:org.roda.wui.client.common.lists">

	<ui:with field='constants' type='config.i18n.client.UserManagementConstants' />

	<ui:style>

	</ui:style>
	
	<ui:with field='messages' type='config.i18n.client.BrowseMessages' />

	<g:FlowPanel styleName="wui-management-user" addStyleNames="wrapper skip_padding">
		<g:FlowPanel addStyleNames="row full_width skip_padding">
			<g:FlowPanel addStyleNames="col_10 content">
				<g:Label styleName="h1">Agent</g:Label>
				<g:Label styleName="descriptiveMetadata-field-key">Identifier</g:Label>
				<g:Label ui:field="agentId" />
				<g:Label styleName="descriptiveMetadata-field-key">Name</g:Label>
				<g:Label ui:field="agentName" />
				<g:Label styleName="descriptiveMetadata-field-key" ui:field="agentTypeKey">Type</g:Label>
				<g:Label ui:field="agentTypeValue" />
				<g:Label styleName="descriptiveMetadata-field-key" ui:field="agentDescriptionKey">Description</g:Label>
				<g:Label ui:field="agentDescriptionValue" />
				<g:Label styleName="descriptiveMetadata-field-key">Category</g:Label>
				<g:Label ui:field="agentCategory" />
				<g:Label styleName="descriptiveMetadata-field-key" ui:field="agentVersionKey">Version</g:Label>
				<g:Label ui:field="agentVersionValue" />
				<g:Label styleName="descriptiveMetadata-field-key" ui:field="agentLicenseKey">License</g:Label>
				<g:Label ui:field="agentLicenseValue" />		
				<g:Label styleName="descriptiveMetadata-field-key" ui:field="agentPopularityKey">Popularity</g:Label>
				<g:Label ui:field="agentPopularityValue" />
				<g:Label styleName="descriptiveMetadata-field-key">Initial Release</g:Label>
				<g:Label ui:field="agentInitialRelease" />
				<g:Label styleName="descriptiveMetadata-field-key" ui:field="agentWebsiteKey">Website</g:Label>
				<g:Label ui:field="agentWebsiteValue" />
				<g:Label styleName="descriptiveMetadata-field-key" ui:field="agentDownloadKey">Download</g:Label>
				<g:Label ui:field="agentDownloadValue" />		
				<g:Label styleName="descriptiveMetadata-field-key" ui:field="agentProvenanceInformationKey">Provenance Information</g:Label>
				<g:Label ui:field="agentProvenanceInformationValue" />
				
				<g:Label styleName="descriptiveMetadata-field-key" ui:field="platformsKey">Platforms</g:Label>
				<g:FlowPanel ui:field="platformsValue" />
				<g:Label styleName="descriptiveMetadata-field-key" ui:field="extensionsKey">Extensions</g:Label>
				<g:FlowPanel ui:field="extensionsValue" />
				<g:Label styleName="descriptiveMetadata-field-key" ui:field="mimetypesKey">Mimetypes</g:Label>
				<g:FlowPanel ui:field="mimetypesValue" />
				<g:Label styleName="descriptiveMetadata-field-key" ui:field="pronomsKey">Pronoms</g:Label>
				<g:FlowPanel ui:field="pronomsValue" />
				<g:Label styleName="descriptiveMetadata-field-key" ui:field="utisKey">UTIs</g:Label>
				<g:FlowPanel ui:field="utisValue" />
				
				<g:Label styleName="descriptiveMetadata-field-key" ui:field="formatIdsKey">Formats</g:Label>
				<g:FlowPanel ui:field="formatIdsValue" />
				<g:Label styleName="descriptiveMetadata-field-key" ui:field="requiredAgentsKey">Required Agents</g:Label>
				<g:FlowPanel ui:field="requiredAgentsValue" />
				
			</g:FlowPanel>

			<g:FlowPanel addStyleNames="col_2 last sidebar">
				<g:FlowPanel>
					<g:Label addStyleNames="h4">
						<ui:text from='{messages.sidebarActionsTitle}' />
					</g:Label>
					<g:Button addStyleNames="btn btn-edit" ui:field="buttonEdit">
						<ui:text from='{messages.agentRegisterEditButton}' />
					</g:Button>
					<g:Button addStyleNames="btn btn-times-circle" ui:field="buttonCancel">
						<ui:text from='{constants.editUserCancel}' />
					</g:Button>
				</g:FlowPanel>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
