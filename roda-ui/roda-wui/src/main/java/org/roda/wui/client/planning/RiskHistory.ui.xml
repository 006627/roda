<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:p="urn:import:org.roda.wui.client.planning">

	<ui:with field='messages' type='config.i18n.client.ClientMessages' />

	<ui:style>
	
	</ui:style>

	<g:FlowPanel styleName="wui-browse-metadata-descriptive-versions"
		addStyleNames="wrapper skip_padding">
		<g:FlowPanel addStyleNames="row full_width skip_padding">
			<g:FlowPanel addStyleNames="col_10 content">
				<g:Label styleName="h1">
					<ui:text from='{messages.riskHistoryTitle}' />
				</g:Label>
				<g:ListBox ui:field="list" />
				<p:RiskShowPanel ui:field="oldRisk" />

			</g:FlowPanel>

			<g:FlowPanel addStyleNames="col_2 last sidebar">
				<g:FlowPanel>
					<g:Label addStyleNames="h4">
						<ui:text from='{messages.sidebarActionsTitle}' />
					</g:Label>
					<g:Button addStyleNames="btn btn-play" ui:field="buttonRevert">
						<ui:text from='{messages.revertButton}' />
					</g:Button>
					<g:Button addStyleNames="btn btn-ban" ui:field="buttonRemove">
						<ui:text from='{messages.removeButton}' />
					</g:Button>
					<g:Button addStyleNames="btn btn-default btn-times-circle" ui:field="buttonCancel">
						<ui:text from='{messages.cancelButton}' />
					</g:Button>

				</g:FlowPanel>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
