<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:u="urn:import:org.roda.wui.client.management">

	<ui:with field='messages' type='config.i18n.client.ClientMessages' />

	<g:FlowPanel styleName="wui-management-user" addStyleNames="wrapper skip_padding">
		<g:FlowPanel addStyleNames="row full_width skip_padding">
			<g:FlowPanel addStyleNames="col_10 content">
				<g:Label styleName="h1">
					<ui:text from='{messages.editUserTitle}' />
				</g:Label>
				<u:UserDataPanel ui:field="userDataPanel" />
			</g:FlowPanel>

			<g:FlowPanel addStyleNames="col_2 last sidebar">
				<g:FlowPanel addStyleNames="sidebar_actions_wrapper sticky">
					<g:Label addStyleNames="h4">
						<ui:text from="{messages.actions}" />
					</g:Label>
					<g:Button addStyleNames="btn btn-play" ui:field="buttonApply">
						<ui:text from='{messages.editUserApply}' />
					</g:Button>
					<g:Button addStyleNames="btn btn-check" ui:field="buttonDeActivate">
						<ui:text from='{messages.editUserActivate}' />
					</g:Button>
					<g:Button addStyleNames="btn btn-danger btn-ban" ui:field="buttonRemove">
						<ui:text from='{messages.editUserRemove}' />
					</g:Button>
					<g:Button addStyleNames="btn btn-default btn-times-circle" ui:field="buttonCancel">
						<ui:text from='{messages.editUserCancel}' />
					</g:Button>
				</g:FlowPanel>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
