<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:u="urn:import:org.roda.wui.management.user.client" xmlns:p="urn:import:org.roda.wui.client.ingest.process"
	xmlns:lists="urn:import:org.roda.wui.client.common.lists">

	<ui:style>
	.reportTitle {
		margin-bottom: -25px;
		margin-top: 20px;
	}
	</ui:style>

	<g:FlowPanel styleName="wui-ingest-new" addStyleNames="wrapper skip_padding">
		<g:FlowPanel addStyleNames="row full_width skip_padding">
			<g:FlowPanel addStyleNames="col_10 content">
				<g:Label styleName="h1">Ingest process</g:Label>
				<g:Label addStyleNames="label">
					Name
				</g:Label>
				<g:Label ui:field="name" />
				<g:Label addStyleNames="label">
					Creator
				</g:Label>
				<g:Label ui:field="creator" />
				<g:Label addStyleNames="label">
					Start date
				</g:Label>
				<g:Label ui:field="dateStarted" />
				<g:Label addStyleNames="label">
					Status
				</g:Label>
				<g:Label ui:field="status" />
				<g:Label addStyleNames="label">
					Plugin
				</g:Label>
				<g:Label ui:field="plugin" />
				<g:FlowPanel addStyleNames="wui-plugin-options"
					ui:field="pluginOptions" />

				<g:Label addStyleNames="h3 {style.reportTitle}">
					Reports
				</g:Label>
				<lists:JobReportList ui:field="jobReports" />
			</g:FlowPanel>

			<g:FlowPanel addStyleNames="col_2 last sidebar">
				<g:FlowPanel>
					<g:Label addStyleNames="h4">
						<ui:msg>Actions</ui:msg>
					</g:Label>
					<g:Button addStyleNames="btn btn-ban" ui:field="buttonStop">
						Stop
						process
					</g:Button>
					<g:Button addStyleNames="btn btn-times-circle" ui:field="buttonBack">
						Back
					</g:Button>

				</g:FlowPanel>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
