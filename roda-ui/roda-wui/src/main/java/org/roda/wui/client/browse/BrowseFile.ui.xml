<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:m="urn:import:org.roda.wui.client.main"
	xmlns:wcag="urn:import:org.roda.wui.common.client.widgets.wcag"
	xmlns:commonsearch="urn:import:org.roda.wui.client.common.search"
	xmlns:lists="urn:import:org.roda.wui.client.common.lists" xmlns:b="urn:import:org.roda.wui.client.browse"
	xmlns:s="urn:import:org.roda.wui.client.common.slider">

	<ui:with field='messages' type='config.i18n.client.ClientMessages' />

	<ui:style>
	.searchlist-title {
		position: absolute;
	}
	</ui:style>

	<g:FocusPanel ui:field="keyboardFocus">
		<g:FlowPanel styleName="viewRepresentationFile">
			<g:FlowPanel addStyleNames="filePreviewToolbar">
				<g:Label addStyleNames="browseItemHeader" ui:field="browseItemHeader">
					<ui:text from='{messages.catalogueFileTitle}' />
					&rsaquo;
				</g:Label>
				<m:BreadcrumbPanel ui:field="breadcrumb"
					addStyleNames="viewRepresentationBreadcrumb" />
				<g:FlowPanel addStyleNames="filePreviewToolbarIcons">
					<g:FocusPanel ui:field="disseminationsButton"
						addStyleNames="toolbarLink filePreviewToolbarInfoIcon">
						<g:HTML>
							<i class="fa fa-play-circle-o"></i>
						</g:HTML>
					</g:FocusPanel>
					<g:FocusPanel ui:field="infoFileButton"
						addStyleNames="toolbarLink filePreviewToolbarInfoIcon">
						<g:HTML>
							<i class="fa fa-info-circle"></i>
						</g:HTML>
					</g:FocusPanel>
					<g:FocusPanel ui:field="previousButton" addStyleNames="toolbarLink">
						<g:HTML>
							<i class="fa fa-chevron-left"></i>
						</g:HTML>
					</g:FocusPanel>
					<g:FocusPanel ui:field="nextButton" addStyleNames="toolbarLink">
						<g:HTML>
							<i class="fa fa-chevron-right"></i>
						</g:HTML>
					</g:FocusPanel>
					<g:FocusPanel ui:field="optionsButton"
						addStyleNames="toolbarLink filePreviewToolbarOptionsIcon">
						<g:HTML>
							<i class="fa fa-ellipsis-v"></i>
						</g:HTML>
					</g:FocusPanel>
				</g:FlowPanel>
			</g:FlowPanel>
			<g:FlowPanel addStyleNames="viewRepresentationFile-center" ui:field="center">
				<b:IndexedFilePreview addStyleNames="viewRepresentationFilePreview"
					ui:field="filePreview"></b:IndexedFilePreview>
				<!-- OPTIONS PANEL -->
				<s:SliderPanel ui:field="optionsSliderPanel">
					<s:title>
						<g:Label>
							<ui:text from='{messages.sidebarFoldersFilesTitle}' />
						</g:Label>
					</s:title>
					<s:content>
						<!-- FOLDER ACTIONS -->
						<g:FlowPanel>
							<g:Button ui:field="optionDownload"
								addStyleNames="btn btn-block btn-default-alt btn-download">
								<ui:text from='{messages.viewRepresentationDownloadFileButton}' />
							</g:Button>
							<g:Button addStyleNames="btn btn-block btn-default-alt  btn-edit"
								ui:field="optionRename">
								<ui:text from='{messages.renameButton}' />
							</g:Button>
							<g:Button addStyleNames="btn btn-block btn-default-alt  btn-edit"
								ui:field="optionMove">
								<ui:text from='{messages.moveButton}' />
							</g:Button>
							<g:Button addStyleNames="btn btn-block btn-default-alt btn-upload"
								ui:field="optionUploadFiles">
								<ui:text from='{messages.uploadFilesButton}' />
							</g:Button>
							<g:Button addStyleNames="btn btn-block btn-default-alt btn-plus"
								ui:field="optionCreateFolder">
								<ui:text from='{messages.createFolderButton}' />
							</g:Button>
							<g:Button ui:field="optionRemove" addStyleNames="btn btn-block btn-danger btn-ban">
								<ui:text from='{messages.removeButton}' />
							</g:Button>
						</g:FlowPanel>
					</s:content>
					<s:title>
						<g:Label ui:field="preservationSidebarTitle">
							<ui:text from='{messages.preservationTitle}' />
						</g:Label>
					</s:title>
					<s:content>
						<g:FlowPanel ui:field="preservationSidebar">
							<g:Button ui:field="optionNewProcess"
								addStyleNames="btn btn-block btn-default-alt btn-play">
								<ui:text from='{messages.newProcessPreservation}' />
							</g:Button>
							<g:Button ui:field="optionIdentify"
								addStyleNames="btn btn-block btn-default-alt btn-play">
								<ui:text from='{messages.identifyFormatsButton}' />
							</g:Button>

							<g:Button ui:field="optionEvents"
								addStyleNames="btn btn-block btn-default-alt btn-play">
								<ui:text from='{messages.preservationEvents}' />
							</g:Button>
							<g:Button ui:field="optionRisk"
								addStyleNames="btn btn-block btn-default-alt btn-play">
								<ui:text from='{messages.preservationRisks}' />
							</g:Button>
						</g:FlowPanel>
					</s:content>
				</s:SliderPanel>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FocusPanel>
</ui:UiBinder>
