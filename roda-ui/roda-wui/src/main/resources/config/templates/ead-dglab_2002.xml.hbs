{{~field name="descDate"        order="1"   type="date" auto-generate="now" label="{\"en\": \"Description date\", \"pt_PT\": \"Data da descrição\"}"~}}
{{~field name="id"              order="2"   auto-generate="id" label="{'en': 'Identifier', 'pt_PT': 'Identificador'}" xpath="/*:ead/*:archdesc/*:did/*:unitid/string()"~}}
{{~field name="title"           order='3'   auto-generate='title' label="{'en': 'Title', 'pt_PT': 'Título'}" xpath="/*:ead/*:archdesc/*:did/*:unittitle/string()"~}}
{{~field name="dateInitial"     order="4"   type="date" label="{\"en\": \"Initial date\", \"pt_PT\": \"Data de início\"}" xpath="tokenize(/*:ead/*:archdesc/*:did/*:unitdate/@normal/string(), \"/\")[1]"~}}
{{~field name="dateFinal"       order="5"   type="date" label="{\"en\": \"Final date\", \"pt_PT\": \"Data de fim\"}" xpath="tokenize(/*:ead/*:archdesc/*:did/*:unitdate/@normal/string(), \"/\")[2]"~}}
{{~field name="otherlevel"      order="6"   type="list" list="[\"Produtor\",\"Fundo\",\"Subfundo\",\"Subsubfundo\",\"Secção\",\"Subsecção\",\"Série\",\"Subsérie\",\"Subsubsérie\",\"Unidade de instalação\",\"Documento composto\",\"Documento\"]" auto-generate="level" label="{\"en\": \"Description level\", \"pt_PT\": \"Nível de descrição\"}" xpath="/*:ead/*:archdesc/@otherlevel/string()"~}}
{{~field name="language"        order="7"   auto-generate='language' label="{'en': 'Language', 'pt_PT': 'Idioma'}" xpath="/*:ead/*:archdesc/*:did/*:langmaterial/string()"~}}
{{~field name="rights"          order="8"   type='list' list="[\"Livre\", \"Restrito\"]" label="{'en': 'Rights', 'pt_PT': 'Condições de reprodução'}" xpath="/*:ead/*:archdesc/*:userestrict/*:p[1]/string()"~}}
{{~field name="embarbo"         order="9"   type='text' value='1 ano' label="{'en': 'Embargo time', 'pt_PT': 'Tempo de embarbo'}" xpath="/*:ead/*:archdesc/*:userestrict/*:p[2]/string()"~}}
{{~field name="description"     order="10"  type='textarea' label="{'en': 'Description', 'pt_PT': 'Descrição'}" xpath="/*:ead/*:archdesc/*:scopecontent/*:p/string()"~}}
{{~field name="repository"      order="11"  label="{'en': 'Repository', 'pt_PT': 'Repositório'}" xpath="/*:ead/*:archdesc/*:did/*:repository/*:corpname/string()"~}}
{{~field name="creator"         label="{'en': 'Creator', 'pt_PT': 'Autor'}" xpath="/*:ead/*:archdesc/*:did/*:origination[@label='creator']/string()"~}}
{{~field name="producer"        label="{'en': 'Producer', 'pt_PT': 'Produtor'}" xpath="/*:ead/*:archdesc/*:did/*:origination[@label='producer']/string()"~}}
{{~field name="eadheader"       hidden="true" xpath="/*:ead/*:eadheader"~}}
{{~field name="physdesc"        hidden="true" xpath="/*:ead/*:archdesc/*:did/*:physdesc"~}}
{{~field name="repository"      hidden="true" xpath="/*:ead/*:archdesc/*:did/*:repository"~}}
{{~field name="countryCode"     hidden="true" xpath="/*:ead/*:archdesc/*:did/*:unitid/@countrycode/string()"~}}
{{~field name="repositoryCode"  hidden="true" xpath="/*:ead/*:archdesc/*:did/*:unitid/@repositorycode/string()"~}}
{{~field name="titleType"       hidden="true" xpath="/*:ead/*:archdesc/*:did/*:unittitle/@type/string()"~}}
{{~field name="dsc"             hidden="true" xpath="/*:ead/*:archdesc/*:dsc"~}}
<?xml version="1.0" encoding="utf-8"?>
<ead
	xmlns="urn:isbn:1-931666-22-9"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:isbn:1-931666-22-9 ../schemas/ead2002.xsd">
	{{#if eadheader}}
	{{{eadheader}}}
	{{else ~}}
	<eadheader>
		<eadid/>
		<filedesc>
			<titlestmt>
				<titleproper/>
			</titlestmt>
		</filedesc>
		<profiledesc>
			<creation>
				Generated by RODA version 2.0
				<date normal='{{descDate}}'>{{descDate}}</date>
			</creation>
		</profiledesc>
	</eadheader>
	{{~/if~}}
	<archdesc level='otherlevel' {{#if otherlevel}}otherlevel="{{otherlevel}}"{{/if}}>
		<did>
			{{{physdesc}}}
			{{{repository}}}
            <unitid {{#if countryCode}}countrycode="{{countryCode}}"{{/if}} {{#if repositoryCode}}repositorycode="{{repositoryCode}}"{{~/if~}}>{{id}}</unitid>
			<unittitle {{#if countryCode}}type="{{titleType}}"{{/if}}>{{title}}</unittitle>
			{{~#if dateInitial~}}
				{{~#if dateFinal~}}
					<unitdate normal='{{dateInitial}}/{{dateFinal}}'>{{dateInitial}}/{{dateFinal}}</unitdate>
				{{~^~}}
					<unitdate normal="{{dateInitial}}">{{dateInitial}}</unitdate>
				{{~/if~}}
			{{~^~}}
				{{~#if dateFinal~}}
					<unitdate normal="{{dateFinal}}">{{dateFinal}}</unitdate>
				{{~/if~}}
			{{~/if~}}
            {{~#if producer~}}<origination label="producer">{{producer}}</origination>{{~/if~}}
            {{~#if creator~}}<origination label="creator">{{creator}}</origination>{{~/if~}}
            {{~#if language~}}<langmaterial>{{language}}</langmaterial>{{~/if~}}
            {{~#if repository~}}
                <repository>
                    <corpname>{{repository}}</corpname>
                </repository>
            {{~/if~}}
		</did>
		{{{dsc}}}
        {{~#if description~}}
            <scopecontent>
                <p>{{description}}</p>
            </scopecontent>
        {{~/if~}}
        {{~#if rights~}}
            <userestrict>
            <p>{{~rights~}}</p>
                {{~#if embargo~}}
                    <p>{{embargoTime}}</p>
                {{~/if~}}
            </userestrict>
        {{~/if~}}
	</archdesc>
</ead>
